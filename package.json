{
	"name": "vision-design",
	"private": true,
	"scripts": {
		"build": "next build",
		"dev": "next dev",
		"export": "next export",
		"migrate": "migrate create -dir src/database/migrations -ext sql",
		"migrate_fix": "dotenv -c -- cross-var migrate -path=src/database/migrations -database %DATABASE_URL% -verbose force",
		"migrate_down": "dotenv -c -- cross-var migrate -path=src/database/migrations -database %DATABASE_URL% -verbose down",
		"migrate_up": "dotenv -c -- cross-var migrate -path=src/database/migrations -database %DATABASE_URL% -verbose up",
		"prepare": "git config --local core.hooksPath .githooks",
		"start": "next start"
	},
	"lint-staged": {
		"**/*.(js|jsx|json|jsonc|ts|tsx)": ["biome check --apply"]
	},
	"dependencies": {
		"@aws-sdk/client-s3": "^3.627.0",
		"@hyoretsu/react-components": "^1.7.12",
		"@hyoretsu/utils": "^1.13.0",
		"kysely": "^0.27.4",
		"next": "^14.2.5",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-icons": "^5.2.1",
		"sass": "^1.77.8"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.8.3",
		"@next/env": "^14.2.5",
		"@svgr/webpack": "^8.1.0",
		"@tsconfig/next": "^2.0.3",
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"bun-types": "latest",
		"cross-var": "^1.1.0",
		"dotenv-cli": "^7.4.4",
		"lint-staged": "^15.2.8",
		"typescript": "latest"
	}
}
